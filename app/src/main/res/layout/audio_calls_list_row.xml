<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/cardView"
        android:background="#A5A7A8"
        android:visibility="gone" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:cardCornerRadius="4dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/audioplayerlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="15">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="3"
                android:gravity="center">

                <ImageView
                    android:id="@+id/callstatusid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_call_black_24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:orientation="vertical"
                android:weightSum="9">

                <TextView
                    android:id="@+id/audiofileName"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:paddingLeft="10dp"
                    android:paddingTop="13dp"
                    android:singleLine="true"
                    android:text="File Name"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <!--<TextView-->
                    <!--android:id="@+id/durationtiming"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_weight="1"-->
                    <!--android:textStyle="bold"-->
                    <!--android:text="File Duration"-->
                    <!--android:singleLine="true"-->
                    <!--android:paddingLeft="10dp"-->
                    <!--android:paddingTop="1dp"-->
                    <!--/>-->
                    <TextView
                        android:id="@+id/myaudiofiledate"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:paddingTop="1dp"
                        android:singleLine="true"
                        android:text="Date"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/myaudiofiletime"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:paddingTop="1dp"
                        android:singleLine="true"
                        android:text="Time"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/durationtiming"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="File Duration" />
                </LinearLayout>

                <!--<SeekBar-->
                <!--android:id="@+id/seekbarid"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="0dp"-->
                <!--/>-->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/play_pause_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="end"
                android:orientation="horizontal"
                android:padding="6dp">

                <ImageButton
                    android:id="@+id/play_pause_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_play_circle_filled_black_48dp" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
